<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.studyinghome.mapper.UserMapper">

    <sql id="User_Column_List">
        uid, name, pwd, phone, photo, email, status, create_time, update_time
    </sql>

    <sql id="table_user">tb_user</sql>

    <!-- 查询单条记录 -->
    <select id="getById" resultType="user" parameterType="Long" useCache="true">
        SELECT
        <include refid="User_Column_List"/>
        FROM
        <include refid="table_user"/>
        WHERE
        uid = #{id}
    </select>

    <select id="getByName" resultType="user" parameterType="string">
        SELECT
        <include refid="User_Column_List"/>
        FROM
        <include refid="table_user"/>
        WHERE
        name = #{name}
    </select>

    <select id="getRolesByUid" resultType="role" parameterType="Long">
        SELECT r.id,r.name,r.cname
        FROM tb_role r,user_role u
        WHERE u.rid = r.id
        AND u.uid = #{uid}
    </select>
    <!-- 添加用户 -->
    <insert id="insert" flushCache="true" parameterType="user">
        INSERT INTO
        <include refid="table_user"/>
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                uid,
            </if>
            <if test="name != null">
                name,
            </if>
            <if test="pwd != null">
                pwd,
            </if>
            <if test="phone != null">
                phone,
            </if>
            <if test="photo != null">
                photo,
            </if>
            <if test="email != null">
                email,
            </if>
            create_time,
            update_time,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="uid != null">
                #{uid,jdbcType=INTEGER},
            </if>
            <if test="name != null">
                #{name,jdbcType=VARCHAR},
            </if>
            <if test="pwd != null">
                #{pwd,jdbcType=VARCHAR},
            </if>
            <if test="phone != null">
                #{phone,jdbcType=VARCHAR},
            </if>
            <if test="photo != null">
                #{photo,jdbcType=VARCHAR},
            </if>
            <if test="email != null">
                #{payWay,jdbcType=VARCHAR},
            </if>
            now(),
            now(),
        </trim>
    </insert>
    <!-- 更新订单 -->
    <update id="update" flushCache="true">

    </update>

    <delete id="delete">

    </delete>
</mapper>